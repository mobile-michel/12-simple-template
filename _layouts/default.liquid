---
eleventyComputed:
  css: "{{ site.css12 }}"
layout: base
---
<header>
    {% include 'nav-primary' %}
    <h1>{{ site.name }}</h1>
</header>
<main>
    {% if aside %}
    <aside>
        {% include 'nav-secondary' %}
    </aside>
    {% endif %}
    <section aria-labelledby="{{ title | slugify }}">
        <h2 id="{{ title | slugify }}">{{ title }}</h2>
        {% if description %}<p>{{ description }}</p>{% endif %}
        {{ content }}
        <p>Stylesheet in use: {{ css }}</p>
    </section>
</main>
<footer>
    {% include 'nav-footer' %}
    {% include 'copyright' %}
</footer>